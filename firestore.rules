rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // User profiles - users can only read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Attempted puzzles subcollection - users can track their own attempts
      match /attemptedPuzzles/{puzzleId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Puzzles collection - authenticated read only, no client writes
    // Writes are handled via Firebase Admin SDK (server-side only)
    match /puzzles/{puzzleId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
